<%= form_tag root_path, :method => 'POST' do %>
<%= text_field_tag 'id', nil, placeholder: "Search the company stock", size: 50 %>
<%= submit_tag 'Submit' %>
<% end %>

<br/><br/>

<% if @stock %>

    <strong>Company Name: </strong><%= @stock.name %> - <%= @stock.symbol %><br/>
   

    
<% elsif @nothing %>
    <%= @nothing %>
<% end %>

<% if @error %>
    <%= @error %>
<% end %>





